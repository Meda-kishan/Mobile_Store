<core:FragmentDefinition
 xmlns="sap.m"
    xmlns:core="sap.ui.core"
>

<Dialog 
id="signup_dialog"
title="Sign-up "
>
<VBox class="sapUiMediumMargin">

<Label text="username:" required="true"></Label>
<Input type="Text" id="username_signup_inpt" value="{signin_fei__M>/signin/username}" ></Input>



<Label text="Email:" required="true"></Label>
<Input type="Email" id="email_signup_inpt" value=""></Input>

<Label text="Create Password" required="true"></Label>
<Input type="Password" id="crt_password_signup_inpt" value="{signin_fei__M>/signin/password}" ></Input>

<Label text="Confirm Password" required="true"></Label>
<Input type="Password" id="conf_password_signup_inpt"  value="{signin_fei__M>/signin/password}"></Input>


</VBox>

<beginButton>
<Button text="Sign-up" press=".signup_success"></Button>
</beginButton>
<endButton>
<Button text="Close" press=".signup_close"/>
</endButton>
</Dialog>

</core:FragmentDefinition>